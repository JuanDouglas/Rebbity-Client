<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:padding="25dp"
        android:paddingTop="40dp"
        android:layout_gravity="center"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:textStyle="bold"
            android:textSize="24dp"
            android:textColor="@android:color/black"
            android:text="@string/title_confirm_email"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_marginBottom="15dp"
            android:text="@string/text_confirm_email_sub"
            android:layout_height="wrap_content"/>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/TextInputConfirmationCode"
            style="@style/TextInputLayout">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:hint="@string/hint_confirmation_code"
                android:inputType="phone"
                android:id="@+id/edtPhone"
                android:maxLength="5"
                style="@style/TextInputEditText"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:layout_width="match_parent"
            android:text="@string/text_send_not_working"
            android:textSize="12.5dp"
            android:padding="5dp"
            android:paddingTop="2dp"
            android:id="@+id/txtSendAgain"
            android:textColor="@color/colorPrimary"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="20dp"
        android:layout_margin="20dp"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content"
        android:id="@+id/btnNext">
        <TextView
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:text="@string/text_next"
            android:textColor="@android:color/white"
            android:background="@drawable/gradient"
            android:paddingVertical="12dp"
            android:textSize="16dp"
            android:textAllCaps="true"
            android:paddingHorizontal="22dp"
            android:layout_height="wrap_content"/>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
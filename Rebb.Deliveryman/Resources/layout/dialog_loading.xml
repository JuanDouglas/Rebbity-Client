<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/loadingMainLayout">
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/loadingBackground"
        android:background="@android:drawable/screen_background_dark_transparent"
        android:layout_height="match_parent"
        android:orientation="horizontal" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_background_cornes_top"
        android:layout_alignParentBottom="true"
        android:id="@+id/loadingCardLayout"
        android:paddingBottom="12dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_width="50dp"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="3dp"
                android:layout_centerHorizontal="true"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@android:color/darker_gray"
                android:layout_marginHorizontal="50dp"
                android:layout_height="5dp"/>
            <ProgressBar
                android:id="@+id/loadingProgressBar"
                android:layout_width="@dimen/loading_progress_leagth"
                android:layout_height="@dimen/loading_progress_leagth"
                android:indeterminate="true"
                android:progressDrawable="@drawable/circular_progress_bar"
                android:background="@drawable/circle_shape"
                style="@style/Base.Widget.AppCompat.ProgressBar"
                android:max="100"
                android:secondaryProgressTint="#c3c3c3"
                android:layout_marginTop="40dp"
                android:progress="20"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Task message..."
                android:textSize="16dp"
                android:layout_marginTop="5dp"
                android:id="@+id/loadingMessage"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
<resources>

	<!-- Base application theme. -->
	<style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
		<item name="android:fontFamily">@font/montserrat</item>
	</style>

	<style name="AppTheme.NoActionBar">
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
	</style>

	<style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
		<item name="android:textSize">16dp</item>
		<item name="android:layout_margin">5dp</item>
		<item name="android:fontFamily">@font/roboto</item>
		<item name="android:layout_marginHorizontal">0dp</item>
	</style>

	<style name="TextInputEditText">
		<item name="android:textSize">16dp</item>
		<item name="android:layout_margin">5dp</item>
		<item name="android:fontFamily">@font/roboto</item>
	</style>

	<style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

	<style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />


	<!--Title for font in Text main -->
	<style name="TextTitleFont">
		<item name="android:fontFamily">@font/montserrat</item>
		<item name="android:textSize">24dp</item>
		<item name="android:layout_marginVertical">7dp</item>
		<item name="android:textColor">@android:color/black</item>
	</style>
	<!--Text small -->
	<style name="TextSecond">
		<item name="android:fontFamily">@font/montserrat</item>
		<item name="android:textSize">15dp</item>
		<item name="android:textColor">@android:color/black</item>
	</style>

	<style name="TextViweSepar">
		<item name="android:paddingLeft">3dp</item>

	</style>

</resources>
